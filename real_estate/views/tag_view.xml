<odoo>
    <record id="tag_action" model="ir.actions.act_window">
        <field name ="name">tag</field>
        <field name ="res_model">tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="tag_L1_menu" name="tag" parent="configuration_root_menu" action="tag_action"/>
    <record id="tag_view_tree" model="ir.ui.view">
        <field name="name">tag_tree</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>


            </tree>
        </field>
    </record>



    <record id="tag_view_form" model="ir.ui.view">
        <field name="name">tag_form</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group >


                    </group>
                </sheet>


            </form>
        </field>
    </record>
</odoo>