<odoo>
    <record id="owner_action" model="ir.actions.act_window">
        <field name ="name">owner</field>
        <field name ="res_model">owner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="owner_L1_menu" name="owners" parent="configuration_root_menu" action="owner_action"/>
    <record id="owner_view_tree" model="ir.ui.view">
        <field name="name">owner_tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="property_ids"/>

            </tree>
        </field>
    </record>



    <record id="owner_view_form" model="ir.ui.view">
        <field name="name">owner_form</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group >
                        <group >
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                        <group>
                             <field name="property_ids" widget="many2many_tags"/>
                        </group>

                    </group>
                </sheet>


            </form>
        </field>
    </record>
</odoo>