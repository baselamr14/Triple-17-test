<odoo>
    <record id="property_action" model="ir.actions.act_window">
        <field name ="name">property</field>
        <field name ="res_model">property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="property_closed_server_action" model="ir.actions.server">
        <field name="name">closed</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field> <!--use python code-->
        <field name="code">
            action=records.action_closed() <!--34an ynfz alloogic 3la alrecord aly ana wa2f 3ndo-->
        </field>

    </record>

    <menuitem id="property_L2_menu" name="properties" parent="property_L1_menu" action="property_action"/>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property_tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="header_custom">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="state"/>
                <field name="bedrooms"/>
                <field name="active"/>
                <field name="living_area" optional="1"/>
                <field name="facades" optional="1"/>
                <field name="garage" optional="1"/>
                <field name="garden" optional="1"/>
                <field name="garden_area" optional="1"/>
                <field name="garden_orientation" optional="1"/>
                <field name="owner_id" optional="1"/>

            </tree>
        </field>
    </record>

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property_search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>

                <field name="name"/>
                <field name="postcode"/>

                <filter name="is_garden" string="with_garden" domain="[('garden','=','True')]"/>
                <filter name="is_not_garden" string="without_garden" domain="[('garden','!=','True')]"/>

                <filter name="is_garage" string="with_garage" domain="[('garage','=','True')]"/>

                <filter name="group_garden" string="group_by_garden" context="{'group_by':'garden'}"/>


            </search>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property_form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_draft" type="object" class="btn-primary" string="draft" invisible="state=='draft'"/>
                        <button name="action_pending" type="object" class="btn-secondary" string="pending" invisible="state != 'draft'"/>
                        <button name="action_sold" type="object" class="btn-success" string="sold" invisible="state=='pending'"/>



                        <field name="state" widget="statusbar" />
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group >
                        <group string="General Info">

                            <field name="description"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                            <field name="expected_price"/>
                            <field name="diff"/>
                            <field name="bedrooms"/>
                            <field name="owner_id"/>
                            <field name="owner_phone"/>
                            <field name="owner_address"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Additional Info">
                            <field name="living_area" optional="1"/>
                            <field name="facades" optional="1"/>
                            <field name="garage" optional="1"/>
                            <field name="garden" optional="1"/>
                            <field name="garden_area" optional="1"/>
                            <field name="garden_orientation" optional="1"/>
                            <field name="tag_ids" widget="many2many_tags"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="Lines_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>


            </form>
        </field>
    </record>
</odoo>